<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7ECCA"
    tools:context=".AsyncActivity">

    <Button
        android:id="@+id/buttonAsync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="138dp"
        android:text="START"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAsyncRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="2dp"

        android:text="TextView"
        android:textColor="#f00"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonAsync"
        app:layout_constraintTop_toBottomOf="@+id/buttonAsync" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="77dp"
        app:layout_constraintStart_toStartOf="@+id/textViewAsyncRes"
        app:layout_constraintTop_toBottomOf="@+id/textViewAsyncRes" />
</androidx.constraintlayout.widget.ConstraintLayout>